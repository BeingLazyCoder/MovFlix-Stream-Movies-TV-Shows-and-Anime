{
  "compilerOptions": {
    "composite": true, // Required for project references
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true, // Keep this option
    "isolatedModules": true,
    "moduleDetection": "force",
    "emitDeclarationOnly": true, // Add this to allow allowImportingTsExtensions

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* React */
    "jsx": "react-jsx",

    /* JSON Imports */
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "vite.config.ts"]
}